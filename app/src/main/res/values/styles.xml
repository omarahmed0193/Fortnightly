<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Fortnightly.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fortnightly.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fortnightly.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/merriweather_bold_italic</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/libre_franklin_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>